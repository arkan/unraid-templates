<?xml version="1.0"?>
<Container version="2">
  <Name>Sia</Name>
  <Repository>easye/sia</Repository>
  <Registry>https://hub.docker.com/r/easye/sia/</Registry>
  <Date>2016-08-29</Date>
  <Beta>True</Beta>
  <Project>https://github.com/NebulousLabs/Sia</Project>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Overview>Blockchain-based marketplace for file storage</Overview>
  <Description>Blockchain-based marketplace for file storage</Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>9980</HostPort>
        <ContainerPort>9980</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>9981</HostPort>
        <ContainerPort>9981</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>9982</HostPort>
        <ContainerPort>9982</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <ExtraParams>--cpuset-cpus="0" </ExtraParams>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/sia/</HostDir>
      <ContainerDir>/var/local/sia.d/</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment/>
</Container>
